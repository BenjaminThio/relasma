{
    "tasks": [
        {
            "label": "Configure Main",
            "type": "shell",
            "command": "cmake --preset main",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Main",
            "type": "shell",
            "command": "cmake --build --preset main",
            "group": { "kind": "build", "isDefault": true },
            "dependsOn": "Configure Main",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Configure Tests",
            "type": "shell",
            "command": "cmake --preset tests",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "cmake --build --preset tests",
            "group": "build",
            "dependsOn": "Configure Tests",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Current Test",
            "type": "shell",
            "command": "cmake --build --preset tests --target ${fileBasenameNoExtension}",
            "dependsOn": "Configure Tests",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Current Test",
            "type": "shell",
            "command": "${workspaceFolder}/build/tests/bin/${fileBasenameNoExtension}.exe",
            "dependsOn": "Build Current Test",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}